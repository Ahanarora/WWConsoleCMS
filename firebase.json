{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "region": "asia-south1"
  },
  
  "firestore": {
    "rules": "firestore.rules"
  },

  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  }
  
}
